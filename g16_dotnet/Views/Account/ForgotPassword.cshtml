@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Wachtwoord vergeten?";
}

<div class="box">
    <h2 class="box-title box-title-display">@ViewData["Title"]</h2>
    <div class="box-container">
        <p style="margin-bottom: 10px;">Vul uw email adres in.</p>
            <form asp-action="ForgotPassword" method="post">
                    <input asp-for="Email" class="validation-input" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                <button type="submit" class="box-button box-button-small" style="margin:0;">Bevestig</button>
            </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
