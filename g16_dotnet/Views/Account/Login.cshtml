@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="box">
    <h2 class="box-title box-title-display">Log in</h2>
    <div class="box-container">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <!--<h4>Use a lossscal account to log in.</h4>
            <hr style="margin: 5px 0 10px" />
                -->
            <!--<div asp-validation-summary="All" class="text-danger"></div>-->
            <input asp-for="Email" class="validation-input" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Password" class="validation-input" placeholder="Wachtwoord" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="checkbox">
                <label asp-for="RememberMe" class="validation-label">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <button type="submit" class="box-button box-button-small">Log in</button>
                <a asp-action="ForgotPassword" class="validation-link">Wachtwoord vergeten?</a>
            <!--<p>
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
            </p>
                -->
        </form>
