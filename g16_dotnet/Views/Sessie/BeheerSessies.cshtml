@model IEnumerable<g16_dotnet.Models.SessieViewModel.SessieLijstViewModel>

@{
    ViewData["Title"] = "BeheerSessies";
}

<div class="box">
    <h2 class="box-title box-title-display">Beheer Sessies</h2>
    <div class="box-container">
        @if (Model.Count() > 0) {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SessieNaam)</th>
                    <th>@Html.DisplayNameFor(model => model.Omschrijving)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var sessie in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => sessie.SessieNaam)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => sessie.Omschrijving)
                        </td>
                        <td>
                            <a asp-action="SelecteerSessie" asp-route-sessieId="@sessie.SessieCode" class="box-button" style="display:inherit;">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>} else {
            <p>Er zijn geen beschikbare sessies. Gelieve een nieuwe sessie aan te maken.</p>

        }
    </div>
</div>
