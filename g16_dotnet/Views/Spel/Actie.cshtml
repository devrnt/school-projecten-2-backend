@model g16_dotnet.Models.Domain.Actie
@{
    ViewData["Title"] = "Actie";
}

<h2>Actie</h2>
<p>
    @Model.Omschrijving
</p>
<form asp-action="VoerActieUit">
    <div class="form-inline">
        <div class="form-group">
            <label for="toegangsCode">Toegangscode: </label>
